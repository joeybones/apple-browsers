// This file defines commonly used params - this does NOT mean they are added by default
// In your pixel definitions, you can reference these params by their key
// See TEMPLATE.json for an example
{
    appVersion: {
        key: 'appVersion',
        type: 'string',
        description: '',
        pattern: '^[0-9]+\\.[0-9]+\\.[0-9]+$',
        examples: ['7.175.1'],
    },
    atb: {
        key: 'atb',
        type: 'string',
        pattern: 'v[0-9]{1,3}-[0-7]([a-z]{2})?',
        description: 'Add to browser value, corresponding to the users install week and day',
    },
    pixelSource: {
        key: 'pixelSource',
        type: 'string',
        description: 'The channel the user is on',
        enum: ['phone', 'tablet'],
    },
    errorDomain: {
        key: 'd',
        type: 'string',
        description: 'NSError code domain',
        examples: ['NSURLErrorDomain'],
    },
    errorCode: {
        key: 'e',
        type: 'string',
        description: 'NSError code',
        pattern: '^-?\\d+$',
        examples: ['-1009', '42'],
    },
    underlyingErrorCode: {
        keyPattern: '^ue[0-9]$',
        type: 'string',
        description: 'Underlying NSError code',
        pattern: '^-?\\d+$',
        examples: ['-1009', '42'],
    },
    underlyingErrorDomain: {
        keyPattern: '^ud[0-9]$',
        type: 'string',
        description: 'Underlying NSError code domain',
        examples: ['NSURLErrorDomain'],
    },
    widePixelAppName: {
        key: 'app.name',
        type: 'string',
        description: 'The name of the app sending the pixel',
        enum: ['DuckDuckGo iOS'],
    },
    widePixelAppVersion: {
        key: 'app.version',
        type: 'string',
        description: 'The version of the app sending the pixel',
    },
    widePixelInternalUser: {
        key: 'app.internal_user',
        type: 'string',
        description: 'Whether the user is flagged as internal',
        enum: ['true', 'false'],
    },
    widePixelPlatform: {
        key: 'global.platform',
        type: 'string',
        description: 'The name of the platform that the app is running on',
        enum: ['iOS'],
    },
    widePixelType: {
        key: 'global.type',
        type: 'string',
        description: 'The type of software sending the wide pixel',
        enum: ['app'],
    },
    widePixelFormFactor: {
        key: 'global.form_factor',
        type: 'string',
        description: 'The form factor of the current device',
        enum: ['phone', 'tablet'],
    },
    widePixelSampleRate: {
        key: 'global.sample_rate',
        type: 'number',
        description: 'Sample rate for this pixel, between 0 and 1',
    },
    widePixelFeatureStatus: {
        key: 'feature.status',
        type: 'string',
        description: 'Final status of the subscription flow',
        enum: ['SUCCESS', 'FAILURE', 'CANCELLED', 'UNKNOWN'],
    },
    widePixelErrorDomain: {
        key: 'feature.data.error.domain',
        type: 'string',
        description: 'Error domain for the failure, when applicable, e.g. SKErrorDomain',
    },
    widePixelErrorCode: {
        key: 'feature.data.error.code',
        type: 'string',
        description: 'Error code for the failure, when applicable',
        pattern: '^-?\\d+$',
    },
    widePixelUnderlyingErrorDomain: {
        key: 'feature.data.error.underlying_domain',
        type: 'string',
        description: 'Underlying error domain, when applicable, e.g. SKErrorDomain',
    },
    widePixelUnderlyingErrorCode: {
        key: 'feature.data.error.underlying_code',
        type: 'string',
        description: 'Underlying error code, when applicable',
        pattern: '^-?\\d+$',
    },
}
